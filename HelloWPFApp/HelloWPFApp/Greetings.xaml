<Window x:Class="HelloWPFApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HelloWPFApp"
        mc:Ignorable="d"
        Title="Greetings" Height="450" Width="800">
    <Grid RenderTransformOrigin="0.501,0.401">
        <TextBlock HorizontalAlignment="Left" Margin="230,60,0,0" TextWrapping="Wrap" Text="Select a message option and then choose the Display button" VerticalAlignment="Top" Width="478"/>
        <RadioButton x:Name="HelloButton" Content="Hello" IsChecked="True" HorizontalAlignment="Left" Margin="239,138,0,0" VerticalAlignment="Top"/>
        <RadioButton x:Name="GoodbyButton" Content="Goodbye" HorizontalAlignment="Left" Margin="469,138,0,0" VerticalAlignment="Top"/>
        <Button Content="Display" HorizontalAlignment="Left" Margin="370,319,0,0" VerticalAlignment="Top" Click="Button_Click"/>

    </Grid>
</Window>
